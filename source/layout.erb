<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    
    <%= stylesheet_link_tag "base" %>
    <title>Swappticon<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= javascript_include_tag "modernizr.custom" %>
    <script src="//use.typekit.net/osk0qrt.js"></script>
    <script>try{Typekit.load();}catch(e){}</script>
  </head>
  <body>
    <%= partial "layouts/menu" %>
    
    <div id="main" role="main">
      <div class="container">
        <div class="row">
          <div class="eight columns"><%= yield %></div>
          <div class="three u-pull-right columns">
            <aside class="sidebar">
              <h5>Recent Articles</h5>
              <ol>
                <% blog.articles[0...10].each do |article| %>
                  <li><%= link_to article.title, article %> <span><%= article.date.strftime('%b %e') %></span></li>
                <% end %>
              </ol>

              <h5>Tags</h5>
              <ol>
                <% blog.tags.each do |tag, articles| %>
                  <li><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
                <% end %>
              </ol>

              <h5>By Year</h5>
              <ol>
                <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
                  <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
                <% end %>
              </ol>
            </aside> 
          </div>
        </div>
      </div>
     </div>
    
    
    <%= javascript_include_tag "all" %>
  </body>
</html>
